div.container
	div.row
		div.col-lg-6.col-lg-offset-6
			div.col-sm-10
				form.form-inline(role='form')
					label(for='searchForm') Search:
					div#searchForm.form-group.pull-right
						div.input-group
							input.form-control(type='text', ng-model='selected', ng-controller='SearchController', placeholder='Search for an app by name...', typeahead='apk as apk.Name for apk in apks | filter:$viewValue | limitTo:8')
							span.input-group-btn
								button.btn.btn-default(type='button')
									span.glyphicon.glyphicon-search
			div.col-sm-2
				button.btn.btn-primary(ng-controller='ModalController', type='button', ng-click='open()') Advanced
	div.row
		//
			div.col-lg-6
				p.input-group(ng-controller='DateController')
					input.form-control(type='text', datepicker-popup='MMMM dd, yyyy', ng-model='dt', is-open='opened', show-weeks='false', show-button-bar='false', close-text='Close')
					span.input-group-btn
						button.btn.btn-default(ng-click='open($event)')
							i.glyphicon.glyphicon-calendar
		div.col-lg-6
			form.form-inline(role='form')
				label(for='toggleView') Toggle view:
				div#toggleView.btn-group
					button.btn.btn-default(type='button', ng-model='toggleViewModel', btn-radio='"Table"') Table
					button.btn.btn-default(type='button', ng-model='toggleViewModel', btn-radio='"Chart"') Chart
		div.col-lg-6
			div.col-sm-10(ng-controller='DownloadController')
				form.form-inline(role='form')
					label(for='downloadForm') Download:
					div#downloadForm.form-group.pull-right
						ui-select(ng-model='format.selected', theme='bootstrap')
							match(placeholder='Select download format...') {{ $select.selected }}
							choices(repeat='format in formats | filter: $select.search')
								div(ng-bind-html='format | highlight: $select.search')
			div.col-sm-2
				button.btn.btn-primary(type='button', ng-model='format.selected') Download
	div.row
		div.col-lg-12
			div.table-responsive
				table.table.table-hover
					thead
						tr
							th Name
							th Version
							th Developer
							th Genre
							th User Rating
							th Release Date
							th File Size
					tbody
						tr(ng-repeat='apk in apks | startFrom:(currentPage - 1) * itemsPerPage | limitTo:itemsPerPage')
							td {{ apk.Name }}
							td {{ apk.Version }}
							td {{ apk.Developer }}
							td {{ apk.Genre }}
							td {{ apk.Rating }}
							td {{ apk.DatePublished }}
							td {{ apk.FileSize }}

	div.row
		div.col-lg-12.text-center
			pagination.pagination(boundary-links='true', page='currentPage', total-items='totalItems', items-per-page='itemsPerPage', max-size='maxSize', previous-text!='&lsaquo;', next-text!='&rsaquo;', first-text!='&laquo;', last-text!='&raquo;', rotate='false')