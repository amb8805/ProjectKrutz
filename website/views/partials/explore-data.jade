div(class="container", data-ng-controller="ExploreDataController")
    div.row
        div.col-md-4.col-sm-5
            h2 Type your query
            form(data-ng-submit="executeQuery()")
                textarea(cols="40", rows="5", name="query", class="form-control textarea", data-ng-model="query")
                input(type="submit", value="Execute Query", class="btn btn-primary")
        div.col-md-8.col-sm-7
            h2 Tables in DB
            table.table
                tr
                    td ApkInformation
                    td ApkSources
                    td Overprivilege
                    td Permissions
                tr
                    td SigningInfo
                    td ToolResults
                    td Underprivilege
                    td apkParser_intents
                tr
                    td apkParser_intents_join
                    td apkParser_privs
                    td apkParser_privs_join
                    td

    h3 Query Results
    div(data-ng-bind-html="(content)", class="query_result")