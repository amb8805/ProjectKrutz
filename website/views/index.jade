extends layout

block body
  div(ng-controller='AppController')
    header#top.header
      div.container
        nav#main-nav.main-nav.navbar-right(role='navigation')
          div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse', ng-click='isCollapsed = !isCollapsed')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          div.navbar-collapse.collapse#navbar-collapse(ng-class='isCollapsed ? "collapse" : "in"')
            ul.nav.navbar-nav
              li.nav-item(ng-class='getNavItemClass("/")')
                a(href='#/') Home
              li.nav-item(ng-class='getNavItemClass("/data")')
                a(href='#/data') Data
              li.nav-item(ng-class='getNavItemClass("/about")')
                a(href='#/about') About

    div(ng-view)

    footer.footer
      div.container
        span Copyright &copy; 2014 Adam Blaine, Casey Klimkowsky, Shannon Trudeau, Dr. Daniel Krutz
        a.pull-right(href='https://github.com/DroidDarwin') GitHub

