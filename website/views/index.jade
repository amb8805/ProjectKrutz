extends layout

block body
  div(ng-controller='AppController')
    header#top.header.navbar-fixed-top
      div.container
        h1.logo.pull-left
          a.logo-title(href='#/')
            img#logo-image.logo-image(src='http://placehold.it/50')
            span.logo-title Reverse Engineering of Android Applications
        nav#main-nav.main-nav.navbar-right(role='navigation')
          div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse', ng-click='isCollapsed = !isCollapsed')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          div.navbar-collapse.collapse#navbar-collapse(ng-class='isCollapsed ? "collapse" : "in"')
            ul.nav.navbar-nav
              li.nav-item(ng-class='getNavItemClass("/")')
                a(href='#/') Home
              li.nav-item(ng-class='getNavItemClass("/data")')
                a(href='#/data') Data
              li.nav-item(ng-class='getNavItemClass("/about")')
                a(href='#/about') About

    div(ng-view)

    footer.footer
      div.container.text-center
        small.copyright Copyright &copy; 2014 Adam Blaine, Casey Klimkowsky, Shannon Trudeau, Dr. Daniel Krutz

  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.15/angular.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.15/angular-route.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.15/angular-sanitize.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.15/angular-resource.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.1-beta.2/Chart.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/spin.js/2.0.1/spin.min.js')
  script(src='https://raw.githubusercontent.com/durated/angular-scroll/master/angular-scroll.js')
  script(src='js/lib/ui-select/select.js')
  script(src='js/lib/angles/angles.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')